{
	// 组件自动化引入
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
			// 以 P5r 开头的组件规则，在components目录下
			"^P5r(.*)": "@/components/P5r$1.vue"
		}
	},
	"pages": [
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "攻略"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/pictorial/pictorial",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "人格面具"
			}
		},
		{
			"path": "pages/strategy/strategy",
			"style": {
				"navigationBarTitleText": "攻略详情"
			}
		},
        {
            "path": "pages/detail/personaDetail",
            "style": {
                "navigationBarTitleText": "人格面具详情"
            }
        },
        {
            "path": "pages/detail/skillDetail",
            "style": {
                "navigationBarTitleText": "技能详情"
            }
        },
        {
            "path": "pages/detail/itemDetail",
            "style": {
                "navigationBarTitleText": "装备详情"
            }
        },
        {
            "path": "pages/my/test2",
            "style": {
                "navigationBarTitleText": "测试2"
            }
        },
        {
            "path": "pages/404/404",
            "style": {
                "navigationBarTitleText": "未找到页面"
            }
        }
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"404": "pages/404/404",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#9f2011",
		"backgroundColor": "#000000"
	},
	"tabBar": {
		"color": "#black",
		"fontSize": "15ddpx",
		"selectedColor": "#ffffff",
		"backgroundColor": "#9f2011",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/icon/icon_index.png",
				"selectedIconPath": "static/icon/icon_index_active.png",
				"text": "攻略"
			},
			{
				"pagePath": "pages/pictorial/pictorial",
				"iconPath": "static/icon/icon_persona.png",
				"selectedIconPath": "static/icon/icon_persona_active.png",
				"text": "人格面具"
			},
			{
				"pagePath": "pages/my/my",
				"iconPath": "static/icon/icon_my.png",
				"selectedIconPath": "static/icon/icon_my_active.png",
				"text": "我的"
			}
		]
	}
}